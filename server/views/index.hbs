<div class="content">
	<header>
		<h1>Note List</h1>
	</header>
	<form action="/addNewNote" method="post" class="noteListTop">
		<button type="submit">Create new Note</button>
	</form>
	<select id="styleSwitcher">
		<option>Style 1</option>
		<option>Style 2</option>
	</select>
	<form action="/" method="get"><input type="hidden" method="_show_finished">
		<button type="submit" method="get">Show Finished</button>
	</form>
	<form action="/getNotes" method="get" class="noteListBottom">
		<fieldset>
			<legend>Sort by</legend>
			<button type="submit" name="submit" value="dateDue">Date Due</button>
			<button type="submit" name="submit" value="dateCreated">Date Created</button>
			<button type="submit" name="submit" value="priority">Priority</button>
		</fieldset>
	</form>

	<div id="noteContainer">
		{{#each notes}}
				<form class="finishedNote" action="/editNote" method="post">
				<div class="noteTitleRow">
					<span>{{dateFormat dueDate "D. MMM YYYY"}}</span>
					<p>{{noteTitle}}</p>
					<span>{{#multiply priority}}
						&#x26a1;
					{{/multiply}}</span>
				</div>
				<div class="noteContentRow">
					<div><input name="isDone" id="isDone" type="checkbox" {{#if done}}checked{{/if}} disabled>
						<label for="isDone">Finished</label></div>
					<textarea name="noteContent" disabled>{{description}}</textarea>
					<input type="hidden" name="_id" value="{{_id}}">
					<button type="submit" class="editNote">edit</button>
				</div>
			</form>
		{{/each}}
	</div>
</div>

