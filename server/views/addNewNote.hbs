<div class="content">
<header>
    <h1>New Note</h1>
</header>
<form action='/saveNote' method='post' id="newNote">
	<label>Title
		<input type="text" name="noteTitle">
	</label>
	<label>Description
		<textarea name="noteDescription"></textarea>
	</label>
	<label>Priority
        <input type="number" name="priority" min="1" max="5">
	</label>
	<label>To do until
		<input type="date" name="dueDate">
	</label>

    <span id="doneCheckbox">
    <label>
        <input type="checkbox" name="doneCheck" id="doneCheck">Done
    </label>
    </span>
    <span class="buttonSection">
        <button type="submit">Save</button>
    	<button type="reset">Reset</button>
    </span>
</form>
</div>